{
    "name": "samwilson/basildon",
    "description": "A static site generator.",
    "license": "GPL-3.0-or-later",
    "require": {
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-sqlite3": "*",
        "addwiki/mediawiki-api-base": "^3",
        "endroid/qr-code": "^5.1",
        "myclabs/php-enum": "^1.5",
        "psr/simple-cache": "^3.0",
        "samwilson/commonmark-latex": "^1",
        "samwilson/commonmark-shortcodes": "^0.6",
        "samwilson/phpflickr": "^5",
        "simplepie/simplepie": "^1.8",
        "symfony/cache": "^6.0",
        "symfony/console": "^6 || ^7 || ^8",
        "symfony/filesystem": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/process": "^6.0",
        "symfony/yaml": "^6.0",
        "twig/intl-extra": "^3.3",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.7",
        "phan/phan": "^6.0",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpunit/phpunit": "^10.5",
        "roslov/psr12ext": "^14",
        "symfony/var-dumper": "^6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "bin": [
        "bin/basildon"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "ergebnis/composer-normalize": true
        },
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "clean": [
            "rm -r example/cache/ example/output/ docs/cache/ docs/output/ tests/test_site/cache/ tests/test_site/output/"
        ],
        "test": [
            "composer validate",
            "composer normalize --dry-run",
            "parallel-lint . --exclude node_modules --exclude vendor",
            "phpcs -s",
            "phpunit",
            "phan --allow-polyfill-parser"
        ]
    }
}

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site.title }}</title>
    <link rel="stylesheet" href="{{ page.link('/assets/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ page.link('/assets/style.css') }}" />
</head>
<body>
    <header class="container">
        <h1>{{ site.title }}</h1>
        <nav>
            <ul>
                <li><a href="{{ page.link('index') }}.html">Home</a></li>
                <li><a href="{{ page.link('tags') }}.html">Tags</a></li>
            </ul>
        </nav>
    </header>
    <main class="container">
        {% block main %}
            <h2>{% if page.title is defined %}{{ page.title }}{% else %}Untitled{% endif %}</h2>
            <dl class="">
                {% for key, value in page.metadata %}
                    <dt>{{ key }}</dt>
                    <dd>
                        {% if instanceof(value, 'DateTime') %}
                            {{ value.format('c') }}
                        {% elseif value is iterable %}
                            <ul>
                                {% for v in value %}
                                    <li>{{ v }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            {{ value }}
                        {% endif %}
                    </dd>
                {% endfor %}
            </dl>
            {{ page.body }}
        {% endblock %}
    </main>
    <footer>
        <p>
            <a href="{{ page.link(page.id~'.pdf') }}">Printable version</a>
        </p>
    </footer>
</body>
</html>

<?xml version="1.0"?>
<ruleset name="App">
    <rule ref="./vendor/roslov/psr12ext/PSR12Ext/ruleset.xml">
        <exclude name="Generic.CodeAnalysis.UnusedFunctionParameter.FoundInExtendedClassAfterLastUsed" />
        <!-- Exclude these type hints until we drop support for PHP 8.3. -->
        <exclude name="SlevomatCodingStandard.TypeHints.ClassConstantTypeHint.MissingNativeTypeHint" />
        <exclude name="SlevomatCodingStandard.PHP.UselessParentheses.UselessParentheses" />
        <!-- @todo Fix these. -->
        <exclude name="SlevomatCodingStandard.Classes.ClassLength.ClassTooLong" />
        <exclude name="SlevomatCodingStandard.Complexity.Cognitive.ComplexityTooHigh" />
        <exclude name="SlevomatCodingStandard.Files.FileLength.FileTooLong" />
    </rule>
    <file>.</file>
    <exclude-pattern>.phpunit/</exclude-pattern>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>example/output/</exclude-pattern>
    <exclude-pattern>/cache/</exclude-pattern>
</ruleset>
